<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp">


    <TextView
        android:id="@+id/tvFacebookURL2"
        android:layout_width="402dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#EDF4ED"
        android:inputType="textWebEditText"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:text="https://web.facebook.com/123456789"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tvMobile" />

    <TextView
        android:id="@+id/tvMaidenName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#EDF4ED"
        android:hint="(if married)"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="(If Married)"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvMiddleName"
        app:layout_constraintTop_toBottomOf="@+id/tvMiddleName" />

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#EDF4ED"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:text="09991234567"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#EDF4ED"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="MyEmailAddress@email.com"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvMaidenName"
        app:layout_constraintTop_toBottomOf="@+id/tvMaidenName" />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#EDF4ED"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="ARNEL"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvLastName"
        app:layout_constraintTop_toBottomOf="@+id/tvLastName" />

    <TextView
        android:id="@+id/tvMiddleName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="#EDF4ED"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="MENDOZA"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvFirstName"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstName" />

    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="#EDF4ED"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="SEBASTIAN"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="148dp"
        android:layout_height="133dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_photo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="57dp"
        android:layout_height="82dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="112dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/profile_gradpic" />
</androidx.constraintlayout.widget.ConstraintLayout>